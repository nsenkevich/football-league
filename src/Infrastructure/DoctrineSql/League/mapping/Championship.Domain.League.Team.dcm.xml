<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping
        xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
         https://raw.github.com/doctrine/doctrine2/master/doctrine-mapping.xsd">

    <entity name="Championship\Domain\League\Team" table="teams">
        <id name="id" column="id" type="TeamId">
            <generator strategy="NONE"/>
        </id>
        <field name="name" type="string" nullable="false"/>
        <field name="strip" type="string" nullable="false"/>
        <many-to-one field="league" target-entity="Championship\Domain\League\League">
            <cascade>
                <cascade-persist/>
                <cascade-remove/>
            </cascade>
        </many-to-one>
    </entity>
</doctrine-mapping>